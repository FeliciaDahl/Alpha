
@model MemberSignUpViewModel

@{
    ViewData["Title"] = "Create Account";
    Layout = "_LayoutCenter";
}


<div id="signup" class="center-screen">
    <div class="card form-card">
        <h1>@ViewData["Title"]</h1>

    
        <button class="btn-grey mt-4 mb-2 btn-google"><img src="~/images/google-icon.svg"> Sign Up with Google</button>

        <div class="separator pt-4 pb-2">
            <span>OR</span>
        </div>

        <form id="signup-form" asp-controller="Auth" asp-action="SignUp" method="post" novalidate>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <div class="field-group">
                    <input asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <div class="field-group">
                    <input asp-for="LastName"/>
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="field-group">
                    <input asp-for="Password"  />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <div class="field-group">
                    <input asp-for="ConfirmPassword"/>
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>

            <div class="checkbox-signup mt-3">
                <div class="checkbox-terms">
                    <input asp-for="TermsAndConditions" />
                    <label asp-for="TermsAndConditions"> I accept the <a href="#">Terms and conditions</a></label>
                </div>
                    <span asp-validation-for="TermsAndConditions"></span>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div>
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        @ViewBag.ErrorMessage
                    </div>
                </div>
            }

            <button type="submit" class="btn-standard btn-submit mt-3">Create Account</button>
        </form>

        <div class="mt-4">
            <span>Already have an account? <a href="/Auth/SignIn">Log In</a></span>
    </div>
</div>
</div>

