
@model UserSignUpForm

@{
    ViewBag.Title = "Sign Up";
}


<div id="signup" class="form-card center-screen ">
    
        <form id="signup-form" asp-action="SignUp" asp-asp-controller="Auth" method="post" novalidate validate>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <div class="field-group">
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="form-error"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <div class="field-group">
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="form-error"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="form-error"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <div class="field-group">
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="form-error"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="field-group">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="form-error"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <div class="field-group">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="form-error"></span>
                </div>
            </div>
            <div class="form-group checkbox mt-3">
                <label asp-for="Terms"></label>
                <div class="field-group">
                    <input type="checkbox" asp-for="Terms"/>
                    <span asp-validation-for="Terms" class="form-error"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Sign Up</button>
        </form>
</div>

<div id="signup" class="center-screen">
    <div class="card form-card">
        <h1 class="pt-5">Create Account</h1>
        <button class="btn-grey mt-3 btn-google"><img src="~/images/google-icon.svg"> Sign Up with Google</button>
        <div class="separator">
            <span>OR</span>
        </div>
        <form id="signin-form" asp-action="SignIn" asp-asp-controller="Auth" method="post" novalidate validate>
            <div class="mb-3 mt-3">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="form-error"></span>

                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Password"></label>
                <div class="field-group">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="form-error"></span>
                </div>
            </div>
            <div class="alert alert-danger" role="alert">
                @ViewData["ErrorMessage"]
            </div>
            <button type="submit" class="btn-standard btn-submit">Submit</button>
        </form>
    </div>

</div>