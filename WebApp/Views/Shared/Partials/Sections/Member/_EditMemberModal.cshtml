@model MemberEditViewModel



<div id="editMemberModal" class="modal member-modal">

    <div class="modal-content">
        <div class="modal-head">
            <h3>Edit Member</h3>
            <button class="close-btn" data-close="true"><i class="bi bi-x-lg"></i></button>
        </div>

        <form asp-action="EditMember" asp-controller="Member" enctype="multipart/form-data" method="post" novalidate>
            
            <input id="memberId" asp-for="Id" readonly type="hidden" />
        
            <div class="form-group">
                <div class="image-preview-container edit-upload-trigger preview-circle">
                    <div class="circle-grey edit-image-container">

                        <i class="bi bi-camera-fill edit-preview-camera "></i>
                        <i class="bi bi-pencil-square edit-preview-pencil"></i>
                    </div>

                    <input type="file" asp-for="MemberImage" class="hide edit-file-upload" />
                    <img asp-for="MemberImagePath" src="" class="image-preview hide edit-image-preview" alt="Member image" />

                </div>
            </div>
            <div class="form-name-group">
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <div class="field-group">
                        <input id="memberFirstName" asp-for="FirstName" />
                        <span asp-validation-for="FirstName"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <div class="field-group">
                        <input id="memberLastName" asp-for="LastName" />
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input id="memberEmail" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="JobTitle"></label>
                <div class="field-group">
                    <input id="memberJobTitle" asp-for="JobTitle" />
                    <span asp-validation-for="JobTitle"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <div class="field-group">
                    <input id="memberPhoneNumber" asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="form-error"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Role"></label>
                <select id="memberRole" asp-for="Role" asp-items="@Model.Roles" class="form-select">
                    <option value="">Add Role</option>
                </select>
            </div>
            <div class="form-name-group">
                <div class="form-group">
                    <label asp-for="Street"></label>
                    <div class="field-group">
                        <input id="memberStreet" asp-for="Street" />
                        <span asp-validation-for="Street"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode"></label>
                    <div class="field-group">
                        <input id="memberPostalCode" asp-for="PostalCode" />
                        <span asp-validation-for="PostalCode"></span>
                    </div>
                </div>
            </div>
            <div class="form-name-group">
                <div class="form-group">
                    <label asp-for="City"></label>
                    <div class="field-group">
                        <input id="memberCity" asp-for="City" />
                        <span asp-validation-for="City"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Country"></label>
                    <div class="field-group">
                        <input id="memberCountry" asp-for="Country" />
                        <span asp-validation-for="Country"></span>
                    </div>
                </div>
            </div>


            <button type="submit" class="btn-submit btn-standard mt-3">Save</button>

        </form>
    </div>
</div>

