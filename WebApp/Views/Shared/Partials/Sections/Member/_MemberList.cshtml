@using Domain.Models
@model List<Member>


<div class="member-list">

@foreach (var member in Model)
{
    <div class="list-cards member-card">
           
            <div class="dropdown-wrapper-member">
                <button type="button" data-type="dropdown" data-target="#member-dropdown-@member.Id" class="member-actions">
                    <i class="bi bi-three-dots"></i>
                </button>
                <div id="member-dropdown-@member.Id" class="dropdown">
                    <div class="dropdown-body">
                        <a data-modal="true" data-target="#editMemberModal" class="dropdown-action btn-edit btn-edit-member" data-id="@member.Id">
                            <i class="bi bi-pencil-fill"></i> Edit
                        </a>

                        <div class="separator"></div>
                        <a data-modal="true" data-target="#deleteMemberModal" class="btn-icons btn-delete btn-delete-member dropdown-action" data-id="@member.Id"><i class="bi bi-trash3-fill"></i>Delete</a>
                    </div>
                </div>
            </div>


            <div class="member-card-content">
            <div class="image">
                @if (!string.IsNullOrEmpty(member.Image))
                {
                    <img class="member-img" src="@Url.Content("~/" + member.Image)" alt="Project image" />
                }
                else
                {
                    <img class="member-img" src="~/images/avatar-member.svg" alt="Project image" />
                }
            </div>
            <div class="name">@member.FirstName @member.LastName</div>
                <div class="jobtitle">
                @if (!string.IsNullOrEmpty(member.JobTitle))
                {
                    <span>@member.JobTitle</span> 
                }
                else
                {
                    <span>No title</span>
                } 
                </div>

        <div class="email">@member.Email</div>
         <div class="phone">@member.PhoneNumber</div>
    </div>

   </div>
}
</div>
    