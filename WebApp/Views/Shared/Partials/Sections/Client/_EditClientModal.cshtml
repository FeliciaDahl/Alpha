@model ClientEditViewModel

<div id="editClientModal" class="modal client-modal">

    <div class="modal-content">
        <div class="modal-head">
            <h3>Edit Client</h3>
            <button class="close-btn" data-close="true"><i class="bi bi-x-lg"></i></button>
        </div>
        <form asp-action="EditClient" asp-controller="Client" method="post" enctype="multipart/form-data" data-method="patch" novalidate>
            <input id="clientId" asp-for="Id" readonly type="hidden" />

            <div class="form-group">
                <div id="edit-upload-trigger" class="image-preview-container preview-circle">
                    <div id="edit-image-container" class="circle-grey">
                 
                        <i id="edit-preview-camera" class="bi bi-camera-fill"></i>
                        <i id="edit-preview-pencil" class="bi bi-pencil-square"></i>

                    </div>

                    <input id="edit-file-upload" type="file" asp-for="ClientImage" class="hide" />
                    <img id="edit-image-preview" src="" class="client-img clientImagePath image-preview hide" alt="Client Image" />
                  
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ClientName"></label>
                <div class="field-group">
                    <input id="clientName" asp-for="ClientName"/>
                    <span asp-validation-for="ClientName"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ContactPerson"></label>
                <div class="field-group">
                    <input id="clientContact" asp-for="ContactPerson"/>
                    <span asp-validation-for="ContactPerson"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input id="clientEmail" asp-for="Email"/>
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Location"></label>
                <div class="field-group">
                    <input id="clientLocation" asp-for="Location" />
                    <span asp-validation-for="Location"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <div class="field-group">
                    <input id="clientPhone" asp-for="Phone" />
                    <span asp-validation-for="Phone"> </span>
                </div>
            </div>

            <button type="submit" class="btn-submit btn-standard mt-3">Save</button>

        </form>
    </div>
</div>


