@model ClientEditViewModel


<div id="editClientModal" class="modal client-modal">

    <div class="modal-content">
        <div class="modal-head">
            <h3>Edit Client</h3>
            <button class="close-btn" data-close="true"><i class="bi bi-x-lg"></i></button>
        </div>
        <form asp-action="EditClient" asp-controller="Client" method="post" enctype="multipart/form-data" data-method="patch" novalidate>
            <input id="clientId" asp-for="Id" readonly type="hidden" value="Id" />

            <div class="form-group">
                <div  class="image-preview-container edit-upload-trigger preview-circle">
                    <div  class="circle-grey edit-image-container">
                 
                        <i  class="bi bi-camera-fill edit-preview-camera "></i>
                        <i  class="bi bi-pencil-square edit-preview-pencil"></i>

                    </div>

                    <input type="file" asp-for="ClientImage" class="hide edit-file-upload" />
                    <img asp-for="ImagePath" src="" class="client-img edit-image-preview clientImagePath image-preview hide" alt="Client Image" />
                  
                </div>
            </div>


            <div class="form-group">
                <label asp-for="ClientName"></label>
                <div class="field-group">
                    <input id="clientName" asp-for="ClientName"/>
                    <span asp-validation-for="ClientName"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ContactPerson"></label>
                <div class="field-group">
                    <input id="clientContact" asp-for="ContactPerson"/>
                    <span asp-validation-for="ContactPerson"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input id="clientEmail" asp-for="Email"/>
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Location"></label>
                <div class="field-group">
                    <input id="clientLocation" asp-for="Location" />
                    <span asp-validation-for="Location"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <div class="field-group">
                    <input id="clientPhone" asp-for="Phone" />
                    <span asp-validation-for="Phone"> </span>
                </div>
            </div>

            <button type="submit" class="btn-submit btn-standard mt-3">Save</button>

        </form>
    </div>
</div>


       