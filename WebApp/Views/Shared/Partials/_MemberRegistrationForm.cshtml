@model MemberRegistrationViewModel

@{
    ViewData["Title"] = "Add Member";
}
<div id="signup" class="form-card center-screen mb-3 ">
    <div class="card form-card">

        <h1 class="pt-5">@ViewData["Title"]</h1>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div>
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            </div>
        }
@* 
       FÖR ATT ADMIN SKA KUNNA LÄGG TILL ANVÄNDARE. SKA KOPPLAS MOT EN ANNAN ACTION OCH GÖRAS TILL MODAL *@

        <form id="signup-form" asp-controller="Auth" asp-action="SignUp" method="post" novalidate>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <div class="field-group">
                    <input asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <div class="field-group">
                    <input asp-for="LastName" />
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <div class="field-group">
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="form-error"></span>
                </div>
            </div>
          

            <button type="submit" class="btn btn-primary mt-3">Add Member</button>
        </form>
    </div>
</div>

@await Html.PartialAsync("_ValidationScripts")